FROM python:3.10-slim 
 
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/* 
 
WORKDIR /app 
 
RUN pip install --upgrade pip 
RUN pip install --no-cache-dir streamlit==1.28.1 
 
COPY simple_test_app.py /app/simple_test_app.py 
 
EXPOSE 8501 
 
CMD ["streamlit", "run", "simple_test_app.py", "--server.port=8501", "--server.address=0.0.0.0", "--server.headless=true", "--browser.gatherUsageStats=false"] 
